<Window x:Class="Todo.View.Creating_tasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Todo.View"
        mc:Ignorable="d" 
        Title="Creating_tasks" Height="450" Width="800">

    <Grid>
        <!-- Левая панель -->
        <StackPanel HorizontalAlignment="Left" Margin="62,28,0,0" VerticalAlignment="Top" Width="300">
            <Label Content="Название" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" TextWrapping="Wrap" Height="35" FontSize="14" VerticalContentAlignment="Center" Background="White"/>

            <Label Content="Категория" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,5"/>
            <ComboBox x:Name="CategoryComboBox" Height="35" FontSize="14" VerticalContentAlignment="Center" Background="White">
                <ComboBoxItem Content="Дом"/>
                <ComboBoxItem Content="Работа"/>
                <ComboBoxItem Content="Учеба"/>
                <ComboBoxItem Content="Отдых"/>
            </ComboBox>

            <Label Content="Описание" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,5"/>
            <TextBox x:Name="DescriptionTextBox" TextWrapping="Wrap" Height="100" FontSize="14" VerticalContentAlignment="Top" AcceptsReturn="True" Background="White"/>
        </StackPanel>

        <!-- Правая панель -->
        <StackPanel HorizontalAlignment="Right" Margin="0,28,38,0" VerticalAlignment="Top" Width="300">
            <!-- DatePicker -->
            <Label Content="Дата" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <DatePicker x:Name="TaskDatePicker" Height="35" FontSize="14" VerticalContentAlignment="Center" Background="White"/>

            <!-- TimePicker -->
            <Label Content="Время" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <!-- часы -->
                <ComboBox x:Name="HoursComboBox" Width="70" Height="35" FontSize="14" VerticalContentAlignment="Center"
                          SelectionChanged="Time_SelectionChanged" Background="White">
                    <ComboBoxItem Content="00"/>
                    <ComboBoxItem Content="01"/>
                    <ComboBoxItem Content="02"/>
                    <ComboBoxItem Content="03"/>
                    <ComboBoxItem Content="04"/>
                    <ComboBoxItem Content="05"/>
                    <ComboBoxItem Content="06"/>
                    <ComboBoxItem Content="07"/>
                    <ComboBoxItem Content="08"/>
                    <ComboBoxItem Content="09"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="11"/>
                    <ComboBoxItem Content="12"/>
                    <ComboBoxItem Content="13"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="15"/>
                    <ComboBoxItem Content="16"/>
                    <ComboBoxItem Content="17"/>
                    <ComboBoxItem Content="18"/>
                    <ComboBoxItem Content="19"/>
                    <ComboBoxItem Content="20"/>
                    <ComboBoxItem Content="21"/>
                    <ComboBoxItem Content="22"/>
                    <ComboBoxItem Content="23"/>
                </ComboBox>

                <TextBlock Text=":" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="5,0,5,0"/>

                <!-- минуты -->
                <ComboBox x:Name="MinutesComboBox" Width="70" Height="35" FontSize="14" VerticalContentAlignment="Center"
                          SelectionChanged="Time_SelectionChanged" Background="White">
                    <ComboBoxItem Content="00"/>
                    <ComboBoxItem Content="05"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="15"/>
                    <ComboBoxItem Content="20"/>
                    <ComboBoxItem Content="25"/>
                    <ComboBoxItem Content="30"/>
                    <ComboBoxItem Content="35"/>
                    <ComboBoxItem Content="40"/>
                    <ComboBoxItem Content="45"/>
                    <ComboBoxItem Content="50"/>
                    <ComboBoxItem Content="55"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="148,0,0,23">
            <Button x:Name="CreateButton" Content="Создать" 
                    Background="#FF3CC362" Foreground="White" 
                    BorderBrush="#FF3CC362" 
                    Padding="30,10" 
                    FontSize="16" FontWeight="SemiBold"
                    Click="CreateButton_Click" 
                    Margin="0,0,20,0"
                    Height="35" Width="246">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FF3CC362"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FF3CC362"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="CancelButton" Content="Отмена" 
                    Background="#FFDE4949" 
                    Foreground="White" 
                    BorderBrush="#FFDE4949" 
                    BorderThickness="1" 
                    Padding="30,10" 
                    FontSize="16" FontWeight="SemiBold"
                    Click="CancelButton_Click"
                    Height="35" Width="246">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FFDE4949"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#FFDE4949"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FFDE4949"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>