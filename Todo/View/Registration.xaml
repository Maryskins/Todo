<Window x:Class="Todo.View.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Todo.View"
        mc:Ignorable="d" 
        Title="Registration" Height="478" Width="800">

    <Grid Margin="0,0,0,-6">
      
        <Button x:Name="BackButton"
                Content="Назад"
                HorizontalAlignment="Left"
                Margin="426,393,0,0"
                VerticalAlignment="Top"
                FontSize="16"
                Width="297"
                Height="40"
                Background="#FFDE4949"
                Foreground="White"
                BorderBrush="White">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0,0,11,11">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

       
        <Button x:Name="RegisterButton"
                Content="Зарегистрироваться"
                HorizontalAlignment="Left"
                Margin="426,347,0,0"
                VerticalAlignment="Top"
                FontSize="16"
                Width="297"
                Height="40"
                Background="#FFDE4949"
                Foreground="White"
                BorderBrush="White">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="11,11,0,0" 
                            Margin="0,1,0,0">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    
        <Label x:Name="WelcomeLabel" 
               Content="Welcome back" 
               HorizontalAlignment="Left" 
               Margin="422,17,0,0" 
               VerticalAlignment="Top" 
               FontSize="30"/>

    
        <Label Content="Имя пользователя" 
               HorizontalAlignment="Left" 
               Margin="422,79,0,0" 
               VerticalAlignment="Top" 
               FontSize="18"/>

       
        <Label Content="Ваша почта" 
               HorizontalAlignment="Left" 
               Margin="422,144,0,0" 
               VerticalAlignment="Top" 
               FontSize="18"/>

      
        <TextBox x:Name="UsernameTextBox"
                 HorizontalAlignment="Left" 
                 Margin="426,118,0,0" 
                 TextWrapping="Wrap" 
                 Text="Введите имя пользователя" 
                 VerticalAlignment="Top" 
                 Width="297" 
                 Height="25"
                 BorderBrush="#FFCCCCCC"
                 Foreground="#FF4B4B4B"/>

        <TextBox x:Name="EmailTextBox"
                 HorizontalAlignment="Left" 
                 Margin="424,179,0,0" 
                 TextWrapping="Wrap" 
                 Text="exam@yandex.ru" 
                 VerticalAlignment="Top" 
                 Width="297" 
                 Height="25"
                 BorderBrush="#FFCCCCCC"
                 Foreground="#FF4A4A4A"/>

     
        <Image Margin="98,47,504,256" 
               Source="/Image/Image1.png" 
               Stretch="Fill"/>

     
        <Border BorderBrush="#FFBEBEBE" 
                BorderThickness="1" 
                HorizontalAlignment="Left" 
                Height="1" 
                Margin="426,136,0,0" 
                VerticalAlignment="Top" 
                Width="297"/>

        <Label Content="Пароль" 
               HorizontalAlignment="Left" 
               Margin="422,204,0,0" 
               VerticalAlignment="Top" 
               FontSize="18"/>

        <Label Content="Повторите пароль" 
               HorizontalAlignment="Left" 
               Margin="423,265,0,0" 
               VerticalAlignment="Top" 
               FontSize="18"/>

     
        <TextBox x:Name="PasswordTextBox"
                 HorizontalAlignment="Left" 
                 Margin="426,233,0,0" 
                 TextWrapping="Wrap" 
                 Text="Введите пароль" 
                 VerticalAlignment="Top" 
                 Width="297" 
                 Height="25"
                 BorderBrush="#FFCCCCCC"
                 Foreground="#FF4B4B4B"/>

        <TextBox x:Name="ConfirmPasswordTextBox"
                 HorizontalAlignment="Left" 
                 Margin="427,300,0,0" 
                 TextWrapping="Wrap" 
                 Text="Повторите пароль" 
                 VerticalAlignment="Top" 
                 Width="297" 
                 Height="25"
                 BorderBrush="#FFCCCCCC"
                 Foreground="#FF4A4A4A"/>

     
        <Border BorderBrush="#FFBEBEBE" 
                BorderThickness="1" 
                HorizontalAlignment="Left" 
                Height="1" 
                Margin="429,322,0,0" 
                VerticalAlignment="Top" 
                Width="294"/>

        <Border BorderBrush="#FFBEBEBE" 
                BorderThickness="1" 
                HorizontalAlignment="Left" 
                Height="1" 
                Margin="426,251,0,0" 
                VerticalAlignment="Top" 
                Width="297"/>


        <Border BorderBrush="#FFBEBEBE" 
                BorderThickness="1" 
                HorizontalAlignment="Left" 
                Height="1" 
                Margin="425,197,0,0" 
                VerticalAlignment="Top" 
                Width="298"/>
    </Grid>
</Window>