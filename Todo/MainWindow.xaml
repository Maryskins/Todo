<Window x:Name="LoginWindow" x:Class="Todo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo"
        mc:Ignorable="d"
        Title="Log In" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="377*"/>
        </Grid.ColumnDefinitions>

        <!-- Registration Button -->
        <Button x:Name="RegisterButton"
                Grid.Column="1"
                Content="Регистрация"
                HorizontalAlignment="Left"
                Margin="380,368,0,0"
                VerticalAlignment="Top"
                FontSize="16"
                Width="297"
                Background="#FFDE4949"
                Foreground="White"
                BorderBrush="White" 
                Height="36">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="0,0,11,11">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Login Button -->
        <Button x:Name="LoginButton"
                Grid.Column="1"
                Content="Войти"
                HorizontalAlignment="Left"
                Margin="380,325,0,0"
                VerticalAlignment="Top"
                FontSize="16"
                Width="297"
                Background="#FFDE4949"
                Foreground="White"
                BorderBrush="White" 
                Height="37">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="11,11,0,0" 
                            Margin="0,1,0,0">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Welcome Label -->
        <Label x:Name="WelcomeLabel" 
               Grid.Column="1" 
               Content="Добро пожаловать!" 
               HorizontalAlignment="Left" 
               Margin="380,47,0,0" 
               VerticalAlignment="Top" 
               FontSize="30"/>

        <!-- Email Label -->
        <Label Grid.Column="1" 
               Content="Почта" 
               HorizontalAlignment="Left" 
               Margin="376,129,0,0" 
               VerticalAlignment="Top" 
               FontSize="18"/>

        <!-- Password Label -->
        <Label Grid.Column="1" 
               Content="Пароль" 
               HorizontalAlignment="Left" 
               Margin="376,204,0,0" 
               VerticalAlignment="Top" 
               FontSize="18"/>

        <!-- Email TextBox -->
        <TextBox x:Name="EmailTextBox"
                 Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="380,168,0,0" 
                 TextWrapping="Wrap" 
                 Text="Введите почту" 
                 VerticalAlignment="Top" 
                 Width="272"  
                 BorderBrush="White" 
                 Foreground="#FF4B4B4B"/>

        <!-- Password Recovery Button -->
        <Button Grid.Column="1" 
                Content="Восстановить пароль" 
                HorizontalAlignment="Left" 
                Margin="511,287,0,0" 
                VerticalAlignment="Top" 
                FontSize="16" 
                BorderBrush="White" 
                Background="White"/>

        <!-- Password TextBox -->
        <TextBox x:Name="PasswordTextBox"
                 Grid.Column="1" 
                 HorizontalAlignment="Left"  
                 Margin="380,244,0,0" 
                 TextWrapping="Wrap" 
                 Text="Введите пароль" 
                 VerticalAlignment="Top" 
                 Width="272" 
                 BorderBrush="#FFFCFDFF"  
                 Foreground="#FF4A4A4A" 
                 Background="White" 
                 SelectionBrush="#FF117CD1"/>

        <!-- Images -->
        <Image Margin="69,47,499,233" 
               Source="/Image1.png" 
               Stretch="Fill" 
               Grid.Column="1"/>

        <!-- Separators -->
        <Border BorderBrush="#FFBEBEBE" 
                BorderThickness="1" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                Height="1" 
                Margin="385,262,0,0" 
                VerticalAlignment="Top" 
                Width="267" 
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>

        <Border BorderBrush="#FFBEBEBE" 
                BorderThickness="1" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                Height="1" 
                Margin="380,186,0,0" 
                VerticalAlignment="Top" 
                Width="267" 
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>

        <Image Margin="45,72,515,209" 
               Source="/Image/Image1.png" 
               Stretch="Fill" 
               Grid.Column="1"/>
    </Grid>
</Window>